<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :expired_at %>
    <%= form.date_field :expired_at %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task::STATUS, include_blank: '選択してください' %>
  </div>

<div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task::PRIORITY, include_blank: '選択してください' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
